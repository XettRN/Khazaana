<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IFASettings">

    <Button
        android:id="@+id/add_client"
        android:layout_width="307dp"
        android:layout_height="90dp"
        android:backgroundTint="#00000000"
        android:drawableLeft="@drawable/ic_baseline_person_add_24"
        android:fontFamily="@font/montserrat_regular"
        android:text="Add Client"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />


    <Button
        android:id="@+id/remove_client"
        android:layout_width="307dp"
        android:layout_height="90dp"
        android:backgroundTint="#00000000"
        android:drawableLeft="@drawable/ic_baseline_person_remove_24"
        android:fontFamily="@font/montserrat_regular"
        android:text="Remove Client"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/update_password"
        android:layout_width="307dp"
        android:layout_height="90dp"
        android:backgroundTint="#00000000"
        android:drawableLeft="@drawable/ic_baseline_assignment_late_24"
        android:fontFamily="@font/montserrat_regular"
        android:text="Update Password"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />



    <TextView
        android:id="@+id/settings"
        android:layout_width="169dp"
        android:layout_height="61dp"
        android:text="Settings"
        android:textSize="28sp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

</androidx.constraintlayout.widget.ConstraintLayout>