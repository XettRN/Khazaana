<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#0B0A0A"
    tools:context=".LoadScreen">

    <TextView
        android:id="@+id/fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Fees"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226">

        <TextView
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="left"
            android:fontFamily="@font/montserrat_regular"
            android:text="VS**** **** **** 1234"
            android:includeFontPadding="true"
            android:padding="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usage_fees"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="left"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/montserrat_black"
            android:text="App Usage Fees"
            android:includeFontPadding="true"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="USD 5"
            android:includeFontPadding="true"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/billing_cycle"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="left"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/montserrat_black"
            android:text="Next Billing Cycle"
            android:includeFontPadding="true"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="165dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="OCT 10, 2021"
            android:includeFontPadding="true"
            android:padding="15dp"
            android:textSize="15sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="295dp"
            android:layout_height="1dp"
            android:layout_marginTop="65dp"
            android:background="?android:attr/listDivider" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="299dp"
        android:layout_height="53dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/MS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="MS **** **** **** 5673"
            android:textSize="15sp"
            android:padding="15sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="299dp"
        android:layout_height="53dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598" >
    <TextView
        android:id="@+id/AMEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMEX **** **** **** 8945"
        android:textSize="15sp"
        android:padding="15sp"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>